<div id="user-list-popup" class="popup">
    <div class="popup-content user-list-content">
        <div id="users-card" class="card">
            <!-- Ícono de regresar -->
            <div id="back-icon" class="back-icon">
                <a href="/admin/dashboard" class="btn btn-secondary btn-icon">
                    <i class="fa fa-arrow-left"></i>
                </a>
            </div>

            <div id="users-card-header" class="card-header">
                <h3>Lista de Usuarios</h3>
            </div>

            <div class="user-list-grid">
                {{#each users}}
                <div class="user-card">
                    <div class="card-body">
                        <h4 class="card-title" style="color: aqua;">{{this.username}}</h4>
                        <p>{{this.email}}</p>
                        <a href="/admin/users/edit/{{ this._id }}" class="edit-link"><i class="fa fa-pencil"></i>
                            Editar</a>
                        <form action="/admin/users/remove/{{ this._id }}" method="POST">
                            <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                            <button type="submit" class="btn btn-danger">Remover</button>
                        </form>


                    </div>
                </div>
                {{/each}}
            </div>

            <!-- Paginación -->
            <div class="pagination">
                {{#if hasPrevPage}}
                <a href="?page={{ prevPage }}&search={{ search }}" class="page-link">&laquo; Anterior</a>
                {{else}}
                <span class="page-link disabled">&laquo; Anterior</span>
                {{/if}}

                {{#if hasNextPage}}
                <a href="?page={{ nextPage }}&search={{ search }}" class="page-link">Siguiente &raquo;</a>
                {{else}}
                <span class="page-link disabled">Siguiente &raquo;</span>
                {{/if}}
            </div>
        </div>
    </div>
</div>




