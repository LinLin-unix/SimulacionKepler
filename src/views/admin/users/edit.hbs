<div id="edit-popup" class="popup">
    <div class="popup-content edit-content">
        <div class="card text-center">
            <div id="back-icon" class="back-icon">
                <a href="/admin/users/index" class="btn btn-secondary btn-icon">
                    <i class="fa fa-arrow-left"></i>
                </a>
            </div>

            <div class="card-header">
                <h3>Editar Usuario {{ user.username }}</h3>
            </div>
            <div class="card-body">
                <div class="image-container">
                    <img src="/public/img/SIGNAL.jpg" alt="SIGNAL" class="rounded-circle my-3" style="width: 150px;">
                </div>
                <form action="/admin/users/edit/{{user._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="username" placeholder="Nombre completo" autofocus
                            value="{{user.username}}">
                    </div>
                    <div class="form-group mb-3">
                        <input type="email" class="form-control" name="email" placeholder="Correo Electrónico"
                            value="{{user.email}}">
                    </div>
                    <div class="form-group mb-3">
                        <input type="password" class="form-control" name="password"
                            placeholder="Nueva Contraseña (opcional)">
                    </div>
                    <div class="button-container">
                        <button class="btn btn-primary" type="submit">Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    .btn-icon {
        padding: 8px;
        border-radius: 50%;
        text-align: center;
        width: 40px;
        height: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #6c757d;
        /* Color de fondo */
        color: white;
        /* Color del ícono */
        font-size: 18px;
        border: none;
    }

    .btn-icon:hover {
        background-color: #5a6268;
        /* Color de fondo al pasar el ratón */
        text-decoration: none;
    }
</style>

<script>
    function closeAlert(element) {
        const alert = element.parentElement;
        alert.style.opacity = '0';
        setTimeout(() => {
            alert.remove();
        }, 500);
    }
</script>