<div id="popup" class="popup">
  <div class="popup-content">
    <div id="back-icon" class="back-icon">
      <a href="/admin/dashboard" class="btn btn-secondary btn-icon">
        <i class="fa fa-arrow-left"></i>
      </a>
    </div>
    <h2>Reporte de Usuarios Eliminados</h2>
    <table id="tablaMejoresPuntuaciones">
      <thead>
        <tr>
          <th>Nombre del Administrador</th>
          <th>Correo del Administrador</th>
          <th>Nombre del Usuario Eliminado</th>
          <th>Correo del Usuario Eliminado</th>
          <th>Fecha de Eliminación</th>
        </tr>
      </thead>
      <tbody>
        {{#each userData}}
          <tr>
            <td>{{this.adminName}}</td>
            <td>{{this.adminEmail}}</td>
            <td>{{this.userName}}</td>
            <td>{{this.userEmail}}</td>
            <td>{{this.removedAt}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>



