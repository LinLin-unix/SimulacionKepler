<div id="signup-popup" class="popup">
  <div class="popup-content signup-content">
    <div class="card text-center">
      <div id="back-icon" class="back-icon">
        <a href="/admin/dashboard" class="btn btn-secondary btn-icon">
          <i class="fa fa-arrow-left"></i>
        </a>
      </div>
      <div class="card-header">
        <h2>Reporte de Sugerencias a la Plataforma Web</h2>
      </div>
      <div class="card-body">
        <canvas id="usersReportChart"></canvas>
      </div>
    </div>
  </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    .btn-icon {
        padding: 8px;
        border-radius: 50%;
        text-align: center;
        width: 40px;
        height: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #6c757d;
        /* Color de fondo */
        color: white;
        /* Color del ícono */
        font-size: 18px;
        border: none;
    }

    .btn-icon:hover {
        background-color: #5a6268;
        /* Color de fondo al pasar el ratón */
        text-decoration: none;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const labels = {{{json labels}}};
    const data = {{{json data}}};

    // Configuración del gráfico de pastel
    const ctx = document.getElementById('usersReportChart').getContext('2d');
    new Chart(ctx, {
      type: 'pie',
      data: {
        labels: labels,
        datasets: [{
          label: 'Sugerencias de Usuarios',
          data: data,
          backgroundColor: [
            'rgba(255, 99, 132, 0.6)',
            'rgba(54, 162, 235, 0.6)',
            'rgba(255, 206, 86, 0.6)',
            'rgba(75, 192, 192, 0.6)',
            'rgba(153, 102, 255, 0.6)',
            'rgba(255, 159, 64, 0.6)'
          ]
        }]
      },
      options: {
        responsive: true,
        plugins: {
          tooltip: {
            callbacks: {
              label: function(tooltipItem) {
                return tooltipItem.label + ': ' + tooltipItem.raw;
              }
            }
          }
        }
      }
    });
  });
</script>