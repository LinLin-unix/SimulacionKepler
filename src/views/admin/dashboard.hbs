                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownReports" data-bs-toggle="dropdown" aria-expanded="false">
                            Ver Reportes
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownReports">
                            <li><a class="dropdown-item" href="/admin/reports/users">Usuarios Registrados</a></li>
                            <li><a class="dropdown-item" href="/admin/reports/scores">Mejores Notas</a></li>
                            <li><a class="dropdown-item" href="/admin/reports/suggs">Sugerencias</a></li>
                            <li><a class="dropdown-item" href="/admin/reports/remove">Usuarios Eliminados</a></li>
                        </ul>
                    </div>
                    <a href="/users/logout" class="btn btn-primary">Salir</a>
                </div>
            </div>
        </div>

        <div id="admin-content">
            {{{body}}}
        </div>
    </div>
</div>
