<div id="admin-dashboard-popup" class="popup">
    <div class="popup-content signup-content">
        <div class="card text-center">
            <div class="card-header">
                <h2>Bienvenido Administrador</h2>
            </div>
            <div class="card-body">
                <div class="button-container">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownUsers" data-bs-toggle="dropdown" aria-expanded="false">
                            Gestionar Usuarios
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownUsers">
                            <li><a class="dropdown-item" href="/admin/users/create">Crear Usuario</a></li>
                            <li><a class="dropdown-item" href="/admin/users/index">Listar Usuarios</a></li>
                        </ul>
                    </div>
                    <a href="/admin/stats" class="btn btn-primary">Ver Estadísticas</a>
