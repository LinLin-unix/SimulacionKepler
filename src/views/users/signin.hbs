<div id="login-popup" class="popup">
  <div class="popup-content login-content">

    <div class="card text-center">
      <div class="card-header">
        <h3>LOGIN</h3>
      </div>
      <div class="card-body">
        <div class="image-container">
          <img src="/public/img/SIGNAL.jpg" alt="SIGNAL" class="rounded-circle" style="width: 150px;">
        </div>

        <form action="/users/signin" method="POST">

          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <div class="form-group mb-3">
            <input type="email" class="form-control" name="email" placeholder="Correo Electrónico" required autofocus>
          </div>

          <div class="form-group mb-3">
            <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
          </div>

          <div class="button-container">
            <button class="btn btn-primary" type="submit">Ingresar</button>
            <a href="/users/signup" class="btn btn-secondary">Crear Cuenta</a>
          </div>

        </form>
      </div>
    </div>

  </div>

</div>
</div>

<script>
  function closeAlert(element) {
    const alert = element.parentElement;
    alert.style.opacity = '0';
    setTimeout(() => {
        alert.remove();
    }, 500);
}
</script>
